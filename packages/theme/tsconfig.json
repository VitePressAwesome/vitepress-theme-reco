{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.vue", "build/**/*.ts"]
}
