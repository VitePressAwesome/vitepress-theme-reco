{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["es2018", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.vue", "build/**/*.ts"]
}
